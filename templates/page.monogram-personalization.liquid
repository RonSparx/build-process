  {% section 'monogram-customize' %}
  {% section 'monogram-carousel' %}
  {% section 'monogram-image-text' %}
  {% section 'monogram-info-text' %}

   <div class="appointment-form">
     <div class="appointment-form-message">
      <h3>Book an appointment to personalize your TUMI</h3>
     </div>
    {ets_cf_qph}
  </div>
  
</div>



<script src="{{ 'slick.min.js' | asset_url }}" async="async"></script>
<script src="{{ 'wow.min.js' | asset_url }}" async="async"></script>
<script>
  

  
  $( document ).ready(function() {
      
    $('.personalization-carousel').slick({
      infinite: false,
      slidesToShow: 1,
      slidesToScroll: 1,
      dots:true,
      arrows:false
    });

    $('.image-carousel').slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      infinite: false,
      dots:false,
      arrows:false,
      autoplay: true,
      autoplaySpeed: 1000,
      fade: true,
      cssEase: 'linear'


    });

    // phone number max lenght
    setTimeout(function(){
       $("input[data-validate='isPhoneNumber']").attr('maxlength','10');
    },3000);
    
    // wow js
    
    new WOW().init();
    
  }); 
</script> 