        <div class="md-content">
            <div class="md-header">
                <h5 class="md-title">{{page_content.title}}</h5>
                <button type="button" class="close-md">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>

            <div class="md-body">
                <div class="modal-body product-detail-modal">
                    <div class="airline_inner lklkl">
                        {{page_content.content}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endif %}

<!-- mnodal popup html end -->

