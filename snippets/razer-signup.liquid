<div class="razer-signupform">
  {% assign formId = 'RegisterForm' %}
  {% form 'create_customer', id: formId, novalidate: 'novalidate', class: 'oc-form custom-registerform' %}
  {% include 'form-status', form: form, form_id: formId %}

  <div class="customer-login-details">
    <h2 class="form-heading-h2 member-heading signupform-heading "><ly-as-275970>Your login details</ly-as-275970></h2>
    <span class="form-required-info member-heading signupform-subheading"><ly-as-275971>*Required fields</ly-as-275971></span> 

    <div class="form-row">
      <div class="form-items-col form-validate valid">
        <div class="form-group">
          <label for="{{ formId }}-email" class="field-label-2">{{ 'customer.register.email' | t }} *</label>
          <div class="form-field">
            <input data-required="true"
                   type="email"
                   name="customer[email]"
                   id="{{ formId }}-email"
                   class="member-text-field w-input {% if form.errors contains 'email' %} input--error{% endif %}"
                   {% if form.email %} value="{{ form.email }}"{% endif %}
                   autocorrect="off"
                   autocapitalize="off"
                   autocomplete="email"
                   aria-required="true"
                   {%- if form.errors contains 'email' -%}
                   class="input--error"
                   aria-invalid="true"
                   aria-describedby="{{ formId }}-email-error"
                   {%- endif -%}
                   >
            {%- if form.errors contains 'email' -%} 
            <span id="{{ formId }}-email-error" class="input-error-message">
              <span class="visually-hidden">{{ 'general.accessibility.error' | t }} </span>
              {% include 'icon-error' %}
              <span>{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}.</span>
            </span>
            {%- endif -%}
            <span id="email-caption" class="a-caption-message field-label-2">{{ 'customer.register.email-example' | t }}</span>


          </div>
          <p class="a-error-message error empty" aria-live="assertive">
            <span class="not-valid" > {{ 'customer.register.input_errors.email' | t }} </span>
          </p>
        </div>
      </div> 
    </div>


    <div class="form-row form-row-flex">
      <div class="form-items-col form-pass form-validate">
        <div class="form-group">
          <label for="{{ formId }}-password" class="field-label-2">{{ 'customer.register.password' | t }} *</label>
          <div class="form-field">
            <input data-required="true"
                   type="password"
                   name="customer[password]"
                   id="{{ formId }}-password"
                   class="member-text-field w-input {% if form.errors contains 'password' %} input--error{% endif %}"
                   aria-required="true"
                   {%- if form.errors contains 'password' -%}
                   class="input--error"
                   aria-invalid="true"
                   aria-describedby="{{ formId }}-password-error"
                   {%- endif -%}
                   >

            <div id="toggle-password" class="">
              <span class="password-toggle-show">
                <svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="eye" class="svg-inline--fa fa-eye fa-w-18" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><path fill="currentColor" d="M288 144a110.94 110.94 0 0 0-31.24 5 55.4 55.4 0 0 1 7.24 27 56 56 0 0 1-56 56 55.4 55.4 0 0 1-27-7.24A111.71 111.71 0 1 0 288 144zm284.52 97.4C518.29 135.59 410.93 64 288 64S57.68 135.64 3.48 241.41a32.35 32.35 0 0 0 0 29.19C57.71 376.41 165.07 448 288 448s230.32-71.64 284.52-177.41a32.35 32.35 0 0 0 0-29.19zM288 400c-98.65 0-189.09-55-237.93-144C98.91 167 189.34 112 288 112s189.09 55 237.93 144C477.1 345 386.66 400 288 400z"></path></svg>
              </span>
              <span class="password-toggle-hide">
                <svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="eye-slash" class="svg-inline--fa fa-eye-slash fa-w-20" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512"><path fill="currentColor" d="M634 471L36 3.51A16 16 0 0 0 13.51 6l-10 12.49A16 16 0 0 0 6 41l598 467.49a16 16 0 0 0 22.49-2.49l10-12.49A16 16 0 0 0 634 471zM296.79 146.47l134.79 105.38C429.36 191.91 380.48 144 320 144a112.26 112.26 0 0 0-23.21 2.47zm46.42 219.07L208.42 260.16C210.65 320.09 259.53 368 320 368a113 113 0 0 0 23.21-2.46zM320 112c98.65 0 189.09 55 237.93 144a285.53 285.53 0 0 1-44 60.2l37.74 29.5a333.7 333.7 0 0 0 52.9-75.11 32.35 32.35 0 0 0 0-29.19C550.29 135.59 442.93 64 320 64c-36.7 0-71.71 7-104.63 18.81l46.41 36.29c18.94-4.3 38.34-7.1 58.22-7.1zm0 288c-98.65 0-189.08-55-237.93-144a285.47 285.47 0 0 1 44.05-60.19l-37.74-29.5a333.6 333.6 0 0 0-52.89 75.1 32.35 32.35 0 0 0 0 29.19C89.72 376.41 197.08 448 320 448c36.7 0 71.71-7.05 104.63-18.81l-46.41-36.28C359.28 397.2 339.89 400 320 400z"></path></svg>
              </span>
            </div>

            {%- if form.errors contains 'password' -%}
            <span id="{{ formId}}-password-error" class="input-error-message">
              {% include 'icon-error' %}
              <span>{{ form.errors.translated_fields['password'] | capitalize }} {{ form.errors.messages['password'] }}.</span>
            </span>
            {%- endif -%}
          </div>
        </div>
        <p class="a-error-message error empty" aria-live="assertive">
          <span class="not-valid" > {{ 'customer.register.input_errors.password' | t }}  </span>
        </p>
      </div>

      <div class="form-items-col form-validate">
        <div class="form-group pass-conifrm-field">
          <label for="{{ formId }}-password" class="field-label-2">{{ 'customer.register.conifrm-password' | t }}*</label>
          <div class="form-field">
            <input data-required="true" required type="password" value="" name="customer[confirm-password]" id="confirm-password" class="member-text-field w-input confirm password-splash-conf custom-check" />
            <div id="contoggle-password" class="">
              <span class="password-toggle-show">
                <svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="eye" class="svg-inline--fa fa-eye fa-w-18" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><path fill="currentColor" d="M288 144a110.94 110.94 0 0 0-31.24 5 55.4 55.4 0 0 1 7.24 27 56 56 0 0 1-56 56 55.4 55.4 0 0 1-27-7.24A111.71 111.71 0 1 0 288 144zm284.52 97.4C518.29 135.59 410.93 64 288 64S57.68 135.64 3.48 241.41a32.35 32.35 0 0 0 0 29.19C57.71 376.41 165.07 448 288 448s230.32-71.64 284.52-177.41a32.35 32.35 0 0 0 0-29.19zM288 400c-98.65 0-189.09-55-237.93-144C98.91 167 189.34 112 288 112s189.09 55 237.93 144C477.1 345 386.66 400 288 400z"></path></svg>
              </span>
              <span class="password-toggle-hide">
                <svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="eye-slash" class="svg-inline--fa fa-eye-slash fa-w-20" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512"><path fill="currentColor" d="M634 471L36 3.51A16 16 0 0 0 13.51 6l-10 12.49A16 16 0 0 0 6 41l598 467.49a16 16 0 0 0 22.49-2.49l10-12.49A16 16 0 0 0 634 471zM296.79 146.47l134.79 105.38C429.36 191.91 380.48 144 320 144a112.26 112.26 0 0 0-23.21 2.47zm46.42 219.07L208.42 260.16C210.65 320.09 259.53 368 320 368a113 113 0 0 0 23.21-2.46zM320 112c98.65 0 189.09 55 237.93 144a285.53 285.53 0 0 1-44 60.2l37.74 29.5a333.7 333.7 0 0 0 52.9-75.11 32.35 32.35 0 0 0 0-29.19C550.29 135.59 442.93 64 320 64c-36.7 0-71.71 7-104.63 18.81l46.41 36.29c18.94-4.3 38.34-7.1 58.22-7.1zm0 288c-98.65 0-189.08-55-237.93-144a285.47 285.47 0 0 1 44.05-60.19l-37.74-29.5a333.6 333.6 0 0 0-52.89 75.1 32.35 32.35 0 0 0 0 29.19C89.72 376.41 197.08 448 320 448c36.7 0 71.71-7.05 104.63-18.81l-46.41-36.28C359.28 397.2 339.89 400 320 400z"></path></svg>
              </span>
            </div>

          </div>
          <!--                <p class="a-error-message error empty pass_error_msg" aria-live="assertive">
<span class="not-valid">Password should not blank</span>
</p>  -->
          <p class="a-error-message error empty not-match" aria-live="assertive">
            <span class="not-valid not-match" > {{ 'customer.register.input_errors.conifrm-password' | t }}</span>
          </p>
        </div>
      </div>
    </div>




  </div>

  <h2 class="form-heading-h2 member-heading signupform-heading"><ly-as-275972>Your personal information</ly-as-275972></h2>


  <div class="form-row register-title">
    <div class="form-items-col form-validate valid">
      <div>
        <label class="form-control-label field-label-2">{{ 'customer.register.customer_title' | t }}*</label>
      </div>
      <div class="sub-cat-row form-radio">
        <div class="sub-cat-item">
          <input class="custom-check" type="radio" id="{{ formId }}-ms" name="customer[note][gender]" value="ms" checked="checked" />
          <label for="{{ formId }}-ms" class="field-label-2">{{ 'customer.register.ms' | t }}</label>
        </div>

        <div class="sub-cat-item">
          <input class="custom-check" type="radio" id="{{ formId }}-mrs" name="customer[note][gender]" value="mrs" />
          <label for="{{ formId }}-mrs" class="field-label-2">{{ 'customer.register.mrs' | t }}</label>
        </div>

        <div class="sub-cat-item">
          <input class="custom-check" type="radio" id="{{ formId }}-mr" name="customer[note][gender]" value="mr" />
          <label for="{{ formId }}-mr" class="field-label-2">{{ 'customer.register.mr' | t }}</label>
        </div>

        <div class="sub-cat-item">
          <input class="custom-check" type="radio" id="{{ formId }}-miss" name="customer[note][gender]" value="miss" />
          <label for="{{ formId }}-miss" class="field-label-2">{{ 'customer.register.miss' | t }}</label>
        </div>
      </div>
    </div>
  </div>

  <div class="row form-row ">
    <div class="form-field col">
      <div class="form-items-col form-validate">
        <div class="form-group">
          <label for="{{ formId }}-FirstName" class="field-label-2">{{ 'customer.register.first_name' | t }} *</label>
          <div class="form-field">
            <input  data-required="true" class="custom-check member-text-field w-input" type="text" name="customer[first_name]" id="{{ formId }}-FirstName" {% if customer %} value="{{ customer.first_name }}" {% endif %} required autocomplete="given-name" />
          </div>
          <p class="a-error-message error empty" aria-live="assertive">
            <span class="not-valid">{{ 'customer.register.input_errors.first_name' | t }}</span>
          </p>
        </div>
      </div>
    </div>

    <div class="form-field col">
      <div class="form-items-col form-validate">
        <div class="form-group">
          <label class="field-label-2" for="{{ formId }}-LastName">{{ 'customer.register.last_name' | t }} *</label>
          <div class="form-field">
            <input  data-required="true" class="custom-check  member-text-field w-input" type="text" name="customer[last_name]" id="{{ formId }}-LastName" {% if customer %} value="{{ customer.last_name }}" {% endif %} required autocomplete="family-name" />
          </div>
          <p class="a-error-message error empty" aria-live="assertive">
            <span class="not-valid">{{ 'customer.register.input_errors.last_name' | t }} </span>
          </p>
        </div>
      </div>
    </div>

  </div>


  <div class="form-row">
    <div class="form-items-col form-validate">
      <div class="form-group">
        <label class="field-label-2" for="{{ formId }}-Address">{{ 'customer.register.address' | t }} *</label>
        <div class="form-field">
          <input data-required="true" class="custom-check member-text-field w-input" type="text" name="customer[note][address1]"/>
        </div>
        <p class="a-error-message error empty" aria-live="assertive">
          <span class="not-valid">{{ 'customer.register.input_errors.address' | t }}</span>
        </p>
      </div>
    </div>
  </div>


  <div class="form-row">
    <div class="form-items-col">
      <div class="form-group">
        <label class="field-label-2" for="{{ formId }}-Address2">{{ 'customer.register.address2' | t }}</label>
        <div class="form-field">
          <input class="custom-check member-text-field w-input" type="text" name="customer[note][address2]"/>
        </div>
      </div>
    </div>
  </div>



  <div class="row">
    <div class="form-field col">
      <div class="form-row  countries_states">
        <div class="form-items-col form-validate valid">
          <div class="form-group">
            <label class="field-label-2" for="{{ formId }}-TownCity">{{ 'customer.register.town_city' | t }} *</label>
            <div class="form-field">
              <select class="member-text-field w-input" data-required="true"  name="customer[note][city]" autocomplete="address-level">
                {% include 'city_list'%}
              </select>
              <p class="a-error-message error empty" aria-live="assertive">
                <span class="not-valid"></span>
              </p>
            </div>
          </div>
        </div>
      </div>

    </div>
    <div class="form-field col sm-none"></div>
  </div>


  <div class="row form-row ">
    <div class="form-field col form-validate valid">
      <div class="form-group">
        <label class="field-label-2" for="{{ formId }}-CountryRegion">{{ 'customer.register.country_region' | t }} *</label>
        <select class="member-text-field w-input" required name="customer[note][country_region]" id="{{ formId }}-CountryRegion">
          {% include 'country_list'%}
        </select>

      </div>
    </div>
    <div class="form-field col sm-none"></div>
  </div>

  <div class="row form-row">

    <div class="form-field col">
      <div class="form-items-col ">
        <label class="phone-label-en field-label-2" for="">{{ 'customer.register.phone_number' | t }}<span class="red-label">*</span></label>
        <div class="forminner-row">
          <div class="form-inner-item">
            <div class="form-group form-validate valid">
              <div class="form-field">
                <select class="member-text-field w-input" id="{{ formId }}-country_code" name="customer[note][country_code]">
                  {% include 'country_code'%}
                </select>
              </div>
            </div>
          </div>




          <div class="form-inner-item form-validate">
            <div class="form-group">
              <div class="form-field">
                <input class="member-text-field w-input" data-required="true" id="phonoe_no" type="number" pattern="/^-?\d+\.?\d*$/" onKeyPress="if(this.value.length==12) return false;" name="customer[note][phone]" />
              </div>
              <!--                           <span class="not-valid error_phone" ></span> -->
              <p class="a-error-message error empty" aria-live="assertive">
                <span class="not-valid" >{{ 'customer.register.input_errors.phone_number' | t }} </span>
              </p>

            </div>
          </div>

        </div>
      </div>
    </div>

    <div class="form-field col sm-none"></div>

  </div>

  <div class="row form-row ">
    <div class="form-field col">
      <div class="form-group">
        <label class="field-label-2" for="{{ formId }}-DateOfBirth">{{ 'customer.register.date_of_birth' | t }}</label>
        <div class="form-field">
          <input class="member-text-field w-input"  type="date" name="customer[note][DOB]"/>
          <!--                       <p class="field-message-caption">{{ 'customer.register.dob_info' | t }} </p> -->
        </div>
      </div>
    </div>
    <div class="form-field col sm-none"></div>
  </div>

  <br />

  <h2 class="form-heading-h2 member-heading signupform-heading">{{ 'customer.register.newsletter_title' | t }}</h2>
	
  
  <div class="form-row checkbox tc-check form-validate">
    <div class="accetpt-offer form-group custom-mst">
      <input class="email-checked" type="checkbox"  id="tc" name ="customer[note][terms and conditions]" value="true" aria-invalid="false" data-required="true" />
      <label for="tc" class="w-form-label checkbox-text">I accept the <a class="check-box-link" href="{{shop.url}}/pages/legal-terms-and-conditions">Terms and conditions</a> and the privacy and cookie policy.<span class="red-label">*</span>
      
       <p class="a-error-message error empty" aria-live="assertive">
        <span class="not-valid" >{{ 'please read and accept the terms and conditions' }}</span>
      </p>
      
      </label>

     
    </div>
  </div>
  

  <div class="form-field">
          <input type="checkbox" name="customer[accepts_marketing]"  value="true" id="marketing" />
          <label for="marketing" class="w-form-label checkbox-text">{{ 'customer.register.newsletter' | t }}</label>
        </div>
       <input type="hidden" name="contact[tags]" value="newsletter">
  <br />

  <div class="form-row">
    <h2 class="form-heading-h2 member-heading signupform-heading">{{ 'customer.register.communication' | t }}</h2>
  </div>

  <div class="form-row-grid">
    <div class="form-field form-validate valid">
      <input name="customer[note][communication by email]" value="Email" id="by-email" type="checkbox"  checked />
      <label class="form-control-label w-form-label checkbox-text" for="by-email"> {{ 'customer.register.communication_email' | t }}  </label>
    </div>

    <div class="form-field">
      <input name="customer[note][communication by sms]" value="SMS" id="by-sms" type="checkbox" />
      <label class="form-control-label w-form-label checkbox-text" for="by-sms"> {{ 'customer.register.communication_sms' | t }}  </label>
    </div>

  </div>

  <br />

  <div class="form-row">
    <div class="register-actions text-center">
      <input id="form-sumbit"  type="button" value="{{ 'customer.register.submit' | t }}"  class="btn register-btn member-submit-button" />

    </div>
  </div>

  <br /><br />

  <div class="form-field conditions-wrapper">
    <span id="{{ formId }}-PrivacyPolicy" class="conditions rich-text grey justify size-11">
      <p class="conditions rich-text grey justify size-11 checkbox-text">
        {{ 'customer.register.privacypolicy' | t }}
        <br /><br />
        {{ 'customer.register.privacypolicy2' | t }}
      </p>
    </span>
  </div>
  {% endform %}
</div> 