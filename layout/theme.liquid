<!doctype html>
<html class="h-full" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">

    <title>{{ shop.name }}</title>

    <meta name="description" content="">

    {%- liquid
      render 'vite-tag' with 'theme.css'
      render 'vite-tag' with 'theme.js'
      render 'vite-tag' with 'greeting.ts'
      render 'vite-tag' with 'lit-test.ts'
      render 'vite-tag' with 'keen.js'
      render 'vite-tag' with 'keen.css'
    -%}

    {{ content_for_header }}
  </head>

  <body>
    {% case settings.announcementBar_layout %}
      {% when 'announcementBar_01' %}
        {% section 'announcement-bar-layout-1' %}
    {% endcase %}
    {% case settings.header_layout %}
      {% when 'header_01' %}
        {% section 'header-layout-1' %}
    {% endcase %}
    <main>
      {{ content_for_layout }}
    </main>
  </body>
</html>
