<style>
  .video-conbox .btn-transparent{
    background-color: transparent;
    color: #fff;
    border: 1px solid #fff;
  }
  .video-conbox h3{
        text-transform: capitalize;
        font-weight:500;
        letter-spacing: 3px;
    }
  @media (min-width: 1200px){
    .video-conbox h2 {
        font-size: 18px;
        margin-bottom: 16px;
    }
    .video-conbox h3{
        font-size: 50px;
    }
    .video-conbox .btn-transparent{
    width: 100%;
    max-width: 285px;
  }
  }
</style>

<section class="fullsize-video-bg">
    <div id="video-viewport" class="desktop">
      <div class="fallback-img">
        {% if section.settings.tegra_image_desktop != blank %}
        <img src="{{section.settings.tegra_image_desktop | img_url:'master' }}" alt="{{tegra_image_desktop.alt | escape }}"/>
        {% else %}
        <img src="https://cdn.media.amplience.net/i/tumi/STAPLE-homepage-hero-desktop-fallback.jpeg" alt="img"/>
     	{% endif %}
      </div>
      <video width="100%" height="auto" autoplay muted loop>
        {% if section.settings.tegra_link_desktop != blank %}
        <source src="{{section.settings.tegra_link_desktop}}" type="video/mp4" />
        {% else %}
        <source src="https://cdn.media.amplience.net/v/tumi/lp-tegra-lite-hero-desktop-v1/mp4_1440p" type="video/mp4" />
        {% endif %}
      </video>
    </div>
  
  	<div id="video-viewport" class="mobile">
      <div class="fallback-img">
        {% if section.settings.tegra_image_mobile != blank %}
        <img src="{{section.settings.tegra_image_mobile | img_url:'master' }}" alt="{{tegra_image_mobile.alt | escape }}"/>
        {% else %}
        <img src="https://cdn.media.amplience.net/i/tumi/STAPLE-homepage-hero-mobile-fallback.jpeg" alt="img"/>
     	{% endif %}
      </div>
      <video width="100%" height="auto" autoplay muted loop>
        {% if section.settings.tegra_link_mobile != blank %}
        <source src="{{section.settings.tegra_link_mobile}}" type="video/mp4" />
        {% else %}
        <source src="https://cdn.media.amplience.net/v/tumi/lp-tegra-lite-hero-mobile-v1/mp4_720p" type="video/mp4" />
        {% endif %}
      </video>
    </div>

    <div class="video-con">
      <div class="video-conbox">
        {% if section.settings.tegra_sub_heading != blank %}
        <h2>{{ section.settings.tegra_sub_heading }}</h2> 
        {% endif %}
        {% comment %}
        {% if section.settings.content_img != blank %}
        <img src="{{ section.settings.content_img | img_url: 'master' }}">
        {% else %}
        <img src="https://cdn.shopify.com/s/files/1/0272/4233/2203/files/TUMI-STAPLE-logo-lockup.png?v=1656941588">
        {% endif %}
        {% endcomment %}
        {% if section.settings.tegra_banner_sub_heading != blank %}
        <h3>{{ section.settings.tegra_banner_sub_heading }}</h3> 
        {% endif %}
		{% if section.settings.tegra_btn != blank %}
        <a href="{{section.settings.tegra_btnlink | default: '#'}}" class="btn-transparent">
          <span class="ben-text">{{section.settings.tegra_btn}} </span>
        </a>
        {% endif %}

      </div>
    </div>

  </section>  

