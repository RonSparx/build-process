<section  id="aplhatwo">



    <div class="page-width">
      <div class="discover-wrap">
        <div class="header-block">
          <span class="subtitle">{{section.settings.heading}}</span>
          <h2 class="block_title">
            {{section.settings.sub_heading}}
          </h2>
        </div>
        <div class="discover-aplha">
          
            
           <div class="discover-item">
            <div class="video-col">
              <div class="video-discover">
                <div class="fallback-img">
                  {% if section.settings.img != blank %}
                  	<img src="{{section.settings.img | img_url:'600x'}}" />
                  {% else %}
                  <img src="https://cdn.shopify.com/s/files/1/0272/4233/2203/files/05-Alphabravo-durability-desktop_00281.jpg" alt="img"/>
                  {% endif %}
                </div>
                 {% if section.settings.video != blank %}
                	<video width="100%" height="auto" autoplay muted loop>
                  <source src="{{section.settings.video}}"/>
                </video>
                {% else %}
                <video width="100%" height="auto" autoplay muted loop>
                  <source src="https://cdn.shopify.com/s/files/1/0272/4233/2203/files/51718495-1f06-4290-82d4-074e1db590d5.webm"/>
                </video>
                {% endif %}
              </div>
            </div>
            <div class="video-desc">
              <div class="backpack-con">
                <h2>{{section.settings.title}}</h2>
                {{section.settings.content}}
                
                {% if section.settings.btn != blank %}
                <a href="{{section.settings.link | default:'#'}}" class="btn-transparent">
                  <span class="ben-text">{{section.settings.btn}} </span>
                  <i class="fas fa-caret-right" aria-hidden="true"></i>
                </a>
                {% endif %}
              </div>
            </div>
          </div>
          <div class="discover-item">
            <div class="video-col">
              <div class="video-discover">
                <div class="fallback-img">
                  {% if section.settings.img2 != blank %}
                  <img src="{{section.settings.img2 | img_url:'600x'}}" alt="{{section.settings.title2}}"/>
                  {% else %}
                  <img src="https://cdn.shopify.com/s/files/1/0272/4233/2203/files/05-Alphabravo-sustainability-desktop_00075.jpg" alt="img"/>
                  {% endif %}
                </div>
                {% if section.settings.video2 != blank %}
                	 <video width="100%" height="auto" autoplay muted loop>
                  <source src="{{section.settings.video2}}"/>
                </video>
                {% else %}
                <video width="100%" height="auto" autoplay muted loop>
                  <source src="https://cdn.shopify.com/s/files/1/0272/4233/2203/files/51718495-1f06-4290-82d4-074e1db590d5.webm"/>
                </video>
                
                {% endif %}
              </div>
            </div>
            <div class="video-desc">
              <div class="backpack-con">
                <h2>{{section.settings.title2}}</h2>
                {{section.settings.content2}}
                {% if section.settings.btn2 != blank %}
                <a href="{{section.settings.link2 | default:'#'}}" class="btn-transparent">
                  <span class="ben-text">{{section.settings.btn2}} </span>
                  <i class="fas fa-caret-right" aria-hidden="true"></i>
                </a>
                {% endif %}
              </div>
            </div>
          </div>   
        </div>
      </div>
 
      <div class="discover-sliderWrap alpha-slider">
        <div class="header-block">
          <h2 class="block_title">
            tumi innovations
          </h2>
        </div>

        <div class="discover-slider">
          {% if section.blocks != blank %}
	{% for block in section.blocks   %}
          <div class="discover-sliderItem">
            <div class="discover_img"> 
              	 <img src="{{block.settings.img | img_url:'300x'}}" alt="{{block.settings.heading}}" /> 
            </div>
            <div class="discover_desc">
              <h3>{{block.settings.heading}}</h3>
              {{block.settings.content}}
            </div>
          </div>
          {% endfor %}
          
          {% else %}
          
          
          
          {% for i in (1..4) %}
          <div class="discover-sliderItem">
            <div class="discover_img">
              <img src="https://cdn.shopify.com/s/files/1/0272/4233/2203/files/06-AlphaBravo-RecycledBallisticNylon.jpg" />
            </div>
            <div class="discover_desc">
              <h3>Classified Waistpack</h3>
              <p>
                We stayed true to Alpha Bravo's utilitarian roots with rugged styling and unmatched durability.
              </p>
            </div>
          </div>
		  {% endfor %}
          
          {% endif %}
           


        </div>

      </div>  

    </div>
  </section>
