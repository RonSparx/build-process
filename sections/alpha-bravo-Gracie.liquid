<style>
  .default_bg { background:url('https://cdn.shopify.com/s/files/1/0272/4233/2203/files/10-AlphaBravo-TUMIcrew-background-desktop.jpg') }
  .custom_bg { background:url('{{section.settings.bg_img | img_url:'master' }}') }

</style>

<div class="alpha-bravo-bg {% if section.settings.bg_img != blank %} custom_bg{% else %} default_bg {% endif %}">
      <div class="video-con">
        <div class="video-conbox">
          <h1>{{section.settings.heading}}</h1>
          <h2>{{section.settings.sub_heading}}</h2>
         {{section.settings.content}}
          {% if section.settings.link != blank %}
          <a href="{{section.settings.link | default:'#'}}" class="btn-transparent">
            <span class="ben-text">{{section.settings.btn}}</span>
          </a>
          {% endif %}

        </div>
      </div>

    </div>
 <div class="page-width">

      <div class="alphaBravo-slider">
      
      <div class="discover-sliderWrap alpha-slider">


        <div class="discover-slider">
          
          {% if section.blocks != blank  %}
          
	{% for block in section.blocks %}
          <div class="discover-sliderItem">
            <div class="discover_img">
               <a href="{{block.settings.link | default:'#'}}">
              <img src="{{block.settings.img | img_url:'350x' }}" alt="{{block.settings.title}}" />
              </a>
            </div>
            <div class="discover_desc">
               <a href="{{block.settings.link | default:'#'}}">
              <h3>{{block.settings.title}}</h3>
              {% if block.settings.sub_title != blank %}
              <p>{{block.settings.sub_title}}</p>
              {% endif %}
              </a>
            </div>
          </div>
          
          {% endfor %}

          {% else %}
             {% for i in  (1..4) %}
          
          <div class="discover-sliderItem">
              <div class="discover_img">
              <a href="#">
                <img src="https://cdn.shopify.com/s/files/1/0272/4233/2203/files/10-AlphaBravo-LandoNorris.jpg?v=1641392253" />
                </a>
                </div>
              <div class="discover_desc">
                 <a href="#">
                <h3>Anthony Ramos</h3>
                <p>
                  JOURNEY COMING FEB 2022
                </p>
                </a>
              </div>
            </div>
          
          {% endfor %} 

{% endif %}

        </div>
      </div>
        
      </div>
      
    </div>


{% schema %}
  {
    "name": "Alpha Bravo",
	"max_blocks": 4,
    "settings": [
{
	"type":"image_picker",
	"id":"bg_img",
	"label":"Background Image" 
},	
{
	"type":"text",
	"id":"heading",
	"label":"Heading",
	"default":"ALPHA BRAVO"
},
{
	"type":"text",
	"id":"sub_heading",
	"label":"Sub Heading",
	"default":"Life in forward Motion"
},
{
	"type":"richtext",
	"id":"content",
	"label":"Content",
	"default":"<p>Celebrating over a decade of innovation and utilitarian inspiration, the latest generation of Alpha Bravo pushes the collection forward as the go-to for a non-stop life.</p>"
},
{
	"type":"text",
	"id":"btn",
	"label":"Button Name",
	"default":"Shop the Collection"
},
{
	"type":"url",
	"id":"link",
	"label":"Collection URL"
}

],
"blocks":[
	{
	"name":"block",
	"type":"column",
	"settings":[
	{
	"type":"image_picker",
	"id":"img",
	"label":"Select image"
},
	{
	"type":"text",
	"id":"title",
	"label":"Title"
},
	{
	"type":"text",
	"id":"sub_title",
	"label":"Sub Title"
},
{
	"type":"url",
	"id":"link",
	"label":"URL"
}
]
}
]
  }
{% endschema %}

