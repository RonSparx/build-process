<style>
    .degree-button .btn-transparent{
      background-color: #000000;
      display: inline-block;
      padding: 15px 20px;
      color: #ffffff;
      font-weight: 600;
      font-size: 15px;
      margin: 0;
      letter-spacing: .0125em;
      text-decoration: none;
      max-width: 100%;
      width: 80%;
    }
    .degree-button .fa-caret-right:before{
      content:none;
    }
      .hub-header-block>h3 {
        text-align: center;
        margin-bottom: 25px;
    }
    .hub-header-block p {
        font-size: 14px;
        color: #212529;
        text-align: center;
    }

  @media all and (min-width:767px){
    .hub-header-block p {
        font-size: 18px;
    }
    .hub-header-block {
        padding: 0 5%;
    }
  }

   @media all and (min-width:1199px){
    .hub-header-block {
        padding: 0 12%;
    }
  }
  
  </style>
  
  <section  id="aplhatwo" class="degree-button">
      <div class="page-width">
        <div class="discover-wrap">
          {% if section.settings.mclaren-hub_heading!= blank and  section.settings.mclaren-hub_sub_heading != blank %}
          <div class="header-block hub-header-block">
            <h3 class="subtitle">{{section.settings.mclaren-hub_heading}}</h3>
              {{section.settings.mclaren-hub_sub_heading}}
          </div>
          {% endif %}
            
          <div class="discover-aplha">
             <div class="discover-item">
               <div class="video-desc">
                <div class="backpack-con">
                  <h2>{{section.settings.mclaren-hub_title}}</h2>
                  {{section.settings.mclaren-hub_content}}
                  
                  {% if section.settings.mclaren-hub_btn != blank %}
                  <a href="{{section.settings.mclaren-hub_link | default:'#'}}" class="btn-transparent">
                    <span class="ben-text">{{section.settings.mclaren-hub_btn}} </span>
                    <i class="fas fa-caret-right" aria-hidden="true"></i>
                  </a>
                  {% endif %}
                </div>
              </div>
              <div class="video-col">
                <div class="video-discover">
                  {%  if section.settings.mclaren-hub_vertical_alignment_top == "image_top" %}
                  <div class="fallback-img">
                    {% if section.settings.mclaren-hub_img != blank %}
                        <img src="{{section.settings.mclaren-hub_img | img_url:'600x'}}" />
                    {% else %}
                    <img src="https://cdn.media.amplience.net/i/tumi/lp-19-degree-aluminum-son" alt="img"/>
                    {% endif %}
                  </div>
                  {%  else %}
                    
                   {% if section.settings.mclaren-hub_video != blank %}
                  <video class="desktop_view" width="100%" height="auto" media="(min-width:650px)" autoplay muted loop>
                    <source src="{{section.settings.mclaren-hub_video}}"/>
                  </video>
                   <video class="mobile_view" width="100%" height="auto" autoplay muted loop>
                    <source src="{{section.settings.mclaren-hub_video_mob}}"/>
                  </video>
                     
                  {% else %}
                  <video width="100%" height="auto" autoplay muted loop>
                    <source src="https://cdn.media.amplience.net/v/tumi/lp-mclaren-hub-lite-durability/mp4_1440p"/>
                  </video>
                  {% endif %}
                  {% endif %}
                </div>
              </div>
              
            </div>
            <div class="discover-item">
              <div class="video-desc">
                <div class="backpack-con">
                  <h2>{{section.settings.mclaren-hub_title2}}</h2>
                  {{section.settings.mclaren-hub_content2}}
                  {% if section.settings.mclaren-hub_btn2 != blank %}
                  <a href="{{section.settings.mclaren-hub_link2 | default:'#'}}" class="btn-transparent">
                    <span class="ben-text">{{section.settings.mclaren-hub_btn2}} </span>
                    <i class="fas fa-caret-right" aria-hidden="true"></i>
                  </a>
                  {% endif %}
                </div>
              </div>
              <div class="video-col">
                <div class="video-discover">
                  {%  if section.settings.block_vertical_alignment == "image" %}
                  <div class="fallback-img">
                    {% if section.settings.mclaren-hub_img2 != blank %}
                    <img src="{{section.settings.mclaren-hub_img2 | img_url:'600x'}}" alt="{{section.settings.mclaren-hub_title2}}"/>
                    {% else %}
                    <img src="https://cdn.media.amplience.net/i/tumi/lp-mclaren-hub-lite-dual-access_1" alt="img"/>
                    {% endif %}
                  </div>
                  {% else %}
                  {% if section.settings.mclaren-hub_video2 != blank %}
                  <video class="desktop_view" width="100%" media="(min-width:650px)" height="auto" autoplay muted loop >
                        <source src="{{section.settings.mclaren-hub_video2}}"/>
                  </video>
                  <video class="mobile_view" width="100%" height="auto" autoplay muted loop>
                        <source src="{{section.settings.mclaren-hub_video2_mob}}"/>
                  </video>
                  {% else %}
                  <video width="100%" height="auto" autoplay muted loop>
                    <source src="https://cdn.media.amplience.net/v/tumi/lp-19-degree-aluminum-expandable-v2/mp4_1440p"/>
                  </video>
                  {% endif %}
                    {% endif %}
                  
                </div>
              </div>
              
            </div>   
          </div>
        </div>
   
  
      </div>
    </section>
