<div class="page-width">
  <div class="valentine_gift-for-her gift-wrapper">
  <div class="valentine_gift-for-her-content ">
    <div class="gift_image-content">
      {% if section.settings.for_her_collection != blank %}
      <img src="{{section.settings.for_her_collection | img_url:'master' }}" alt="{{section.settings.for_her_collection.alt | escape }}">
      {% endif %}
    </div>
    
  </div>
<div class="valentine_gift-products degree_productsss">
    <ul class="degree_products valentine_products" style="opacity:0;">   
    {% for product in collections[section.settings.product_col].products %}
      <li class=" ">
        {% include 'valentine-product-card-grid', max_height: 270, product: product %}
      </li>
      {% endfor %}
      
    </ul>
 <div class="valentine_product-content valentine_degree_products">
      {% if section.settings.for_him_collection != blank %}
      <h3>{{ section.settings.for_him_collection }} </h3>
      {% endif %}
      
      {% if section.settings.for_him_content != blank %}
       <p> {{ section.settings.for_him_content }}</p>
      {% endif %}
      
      {% if section.settings.for_him_shop != blank %}
        <a href="{{ section.settings.for_him_url }}" class="btn btn-black">
            <span class="ben-text">{{ section.settings.for_him_shop }}</span>
        </a>
      {% endif %}

    </div>
</div>
  </div>
</div>
    <script>
    $(document).ready(function(){
      $('.valentine_products').slick({
        dots: false,
        arrows:true,
        infinite: true,
        speed:1300,
        slidesToShow:3,
         mobileFirst: true,
        slidesToScroll: 1,
     
      });
      
      

      
      // loading content
          setTimeout(function(){
          jQuery('.valentine_products').css('opacity',1);
          jQuery('.loader_new').hide();
          }, 2000)
    });

  
</script>  

<style>
  .holiday_product_slider{
    padding:0 30px;
    margin:30px 0;
  }
  .dots{
    display:none;
  }
   .carousel-title{
     text-align:center;
      margin-top:30px;
   }
  
  .degree_products .slick-prev{
        left:0px;
  }
  .degree_products .slick-next{
        right:0px;
  }
</style>
 
{% schema %}
    {
        "name": "valentine gift for her",
        "settings": [
          {
           "type":"image_picker",
           "id":"for_her_collection",
           "label":"Desktop Bnaner Image"
          },
           {
            "type":"text",
            "id":"for_him_collection",
            "label": "collection title",
            "default":"Gifts for Her"
          },
          {
            "type":"text",
            "id":"for_him_content",
            "label": "section content ",
            "default":"Celebrate her with stylish gifts, designed to keep up with her on-the-go lifestyle. "
          },
          {
            "type":"text",
            "id":"for_him_shop",
            "label": "button text",
            "default":"Gifts for Him"
          },
          {
            "type":"url",
            "id":"for_him_url",
            "label": "button url"
          },
          {
            "type": "collection",
            "id": "product_col",
            "label": "Select Collection"
          }
        ],
	"presets": [
     {
       "name": "valentine gift for her"
     } 
   ]
  }
{% endschema %}

