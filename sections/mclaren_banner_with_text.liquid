          <a href="{{ section.settings.button_link }}" data-aos="fade-up" data-aos-delay="400">{{ section.settings.button_label }}</a>
        </div>
      </div>
      <img class="img_w case_d" src="{{ section.settings.imgage_4 | img_url:'master' }}" />
      <img class="img_w case_m" src="{{ section.settings.imgage_mbl_4 | img_url:'master' }}" />
    </div>
  </div>   

