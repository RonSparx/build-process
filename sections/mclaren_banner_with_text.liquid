    <div class="custom-grid">
      <div class="mirror_txt offset-medium grid_three">
        <div>
          <span data-aos="fade-up">{{ section.settings.heading_4 }}</span>
          <h3 data-aos="fade-up" data-aos-delay="200">
            <img src="{{ section.settings.title_image | img_url:'original' }}">
