      </div>
      <div class="desc_box grid_five order-1 order-md-2">
        <div data-aos="fade-up" data-aos-delay="200">
          <b>{{ section.settings.heading_3 }}</b>
          <p>{{ section.settings.text_3 }} </p>
        </div>
      </div>
    </div>
  </div>
              
<!-- app con -->
              
