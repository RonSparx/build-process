<!-- App one -->
    <div class="app_con app_collection row no-gutters app1" id="feature_pos" data-aos="fade">
      <div class="custom-grid">
        <div class="grid_seven app_img">
          <img src="{{ section.settings.imgage_1 | img_url:'master' }}" class="img_d" />
          <img src="{{ section.settings.imgage_mbl_1 | img_url:'master' }}" class="img_m" />
        </div>
        <div class="grid_five desc_box">
          <div data-aos="fade-up" data-aos-delay="200">
            <b>{{ section.settings.heading_1 }}</b>
            <p>{{ section.settings.text_1 }} </p>
          </div>
        </div>
      </div>
    </div>
              
<!-- App two -->
              
  <div class="spec_con app_con row no-gutters app2" data-aos="fade">
