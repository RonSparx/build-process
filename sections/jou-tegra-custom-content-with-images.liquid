<style>
.sc-content-inner p{
	font-size: 18px;
    color: #212529;
  	text-align:center;
} 
.sc-content {
  padding-top:1.5rem;
  display: flex;
  justify-content:center;
}
.images_with_content {
    margin-top: 30px;
  text-align:left;
}
.block--section{
  margin-bottom: 30px; 
} 
.block--section .product-card__title{
  text-align: left;
}

  
@media all and (min-width: 750px){
  .sc-content-inner{
  	width: 80%;
  }  
  .images_with_content{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  } 
  .block--section {
    width: 23.5%;
  }
  .block--section .lps-img{
   margin-block: 10px;
  }
  
}
@media all and (max-width: 749px){
  .sc-content-inner{
  	max-width: 400px;
    width: 100%;
  }  
  .sc-content-inner p {
    font-size: 14px;
  }
}
@media all and (min-width:1024px){
  div.sc-content{
    padding-top:3.5rem;
  } 
}
</style>
<div class="page-width">
  <div class="sc-content">
    <div class="sc-content-inner">

        {% if section.settings.jou_tegra_title_third != blank %}
      	{{ section.settings.jou_tegra_title_third }}
      	{% else %}
      	<h3>The Entire TUMI Crew</h3>
      	{% endif %}


      
    	{% if section.settings.jou_tegra_paragraph_third != blank %}
      	{{ section.settings.jou_tegra_paragraph_third }}
      	{% else %}
      	<p>Each person’s journey highlights TUMI’s most loved collections with new, innovative materials and designs that stand for strength, beauty and performance luxury. Like our Crew.</p>
      	{% endif %}
    </div>  
  </div>
  <div class="images_with_content">

    {% for block in section.blocks %} 
    <div class="block--section">
      {% if block.settings.jou_block_image != blank %}
      <div class="lps-img">
        <a href="{{ block.settings.link_jou_block_image }}">
          <img src="{{ block.settings.jou_block_image | img_url: '400x' }}">
        </a>
      </div>
      {% endif %}
       {% if block.settings.jou_title_block != blank %}
      <h4 class="product-card__title">
        {{ block.settings.jou_title_block }}
      </h4>
         {% endif %}
       {% if block.settings.jou_para_block != blank %}
      <p>{{ block.settings.jou_para_block }}</p>
      {% endif %}
    </div>
    {% endfor %}
    
    
  </div>
</div>

{% schema %}
{
  "name": "tegra Custom Content",
  "max_blocks":4,
  "settings": [
    {
      "type": "richtext",
      "id": "jou_tegra_title_third",
      "label": "title"
    },
    {
      "type": "richtext",
      "id": "jou_tegra_paragraph_third",
      "label": "Paragraph"
    }
  ],
  "blocks": [
    {
      "type": "images_block",
      "name": "Add image with text",
      "settings": [
        {
           "type": "image_picker",
           "id": "jou_block_image",
           "label": "upload image"
         },
        {
           "type": "url",
           "id": "link_jou_block_image",
           "label": "upload image link here"
         },
        {
          "id": "jou_title_block",
          "type": "text",
          "label": "Add title",
          "default": "Son Heung-min"
        },
        {
          "id": "jou_para_block",
          "type": "text",
          "label": "Add content here",
          "default": "He’s ready to kickstart all his journeys with our iconic 19 Degree Aluminum collection. This means traveling to tours, going back home and more."
        }
      ]
    }
  ]

}
{% endschema %}