
<style>
  .hub-feature-row {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.hub-feature-col {
    width: calc(33.3% - 15px);
  margin-bottom: 50px;
}

.hub-feature-col.hub-feature-media {
    width: calc(66% - 15px);
      position: relative;
      position: relative;
    padding-top: 45%;
     
}
  .hub-feature-col.hub-feature-media .hub-feature-image{
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
} 
.hub-feature-mobile {
    display: none;
}

@media all and (max-width:767px){
  .hub-feature-col.hub-feature-media {
      display: none;
  }
  .hub-feature-desktop {
      display: none;
  }
  .hub-feature-mobile {
      display: block;
  }
  .hub-feature-slider {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
  .hub-feature-wrap .slick-next {
    right: -10px;
}

.hub-feature-wrap .slick-prev {
    left: -10px;
    z-index: 1;
}
}
  
  
</style>





