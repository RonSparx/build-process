<script>
    $(document).ready(function(){
      if ($(window).width() < 767){
        var sliderCount = 3;
        if($(window).width() >480 && $(window).width() <767){
          sliderCount = 3;
          } else if ($(window).width() <480) {
            sliderCount = 2;
          } 
        $('.hub-feature-slider').slick({
          dots: false,
          arrows:true,
          infinite: false,
          speed:1300,
          slidesToShow:sliderCount,
          slidesToScroll: 1, 
        });
      }
    });

  
</script> 

      
