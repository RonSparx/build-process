<style>
  .explore_content_in .btn-transparent{
    background-color: {{ section.settings.btn_color }};
    color: {{ section.settings.btn_txt_color }};
    min-width: 190px;
    margin: 0;
  }
  .explore_content_in .btn-transparent:hover{
    background-color: #ffffff;
  }
</style> 

<section class="bullet-explore">
  <div class="explore_lg">
    {% if section.settings.image_desktop != blank %}
    <img src="{{section.settings.image_desktop | img_url:'master' }}" alt="{{image_desktop.alt | escape }}"/>
    {% else %}
    <img src="https://cdn.shopify.com/s/files/1/0272/4233/2203/files/lp-Bullet-Train_BottomBanner_Desktop.jpg?v=1658213338" alt="img"/>
    {% endif %}
  </div>
  <div class="explore_sm">
    {% if section.settings.image_desktop != blank %}
    <img src="{{section.settings.image_desktop | img_url:'master' }}" alt="{{image_desktop.alt | escape }}"/>
    {% else %}
    <img src="https://cdn.shopify.com/s/files/1/0272/4233/2203/files/lp-Bullet-Train_BottomBanner_Mobile.jpg?v=1658213338" alt="img"/>
    {% endif %}
  </div>


  <div class="explore_content">
    <div class="explore_content_in">
      {% if section.settings.heading != blank %}
      <h3>{{ section.settings.heading }}</h3>
      {% endif %}
      {% if section.settings.btn != blank %}
      <a href="{{section.settings.btnlink | default: '#'}}" class="btn-transparent">
        <span class="ben-text">{{section.settings.btn}} </span>
      </a>
      {% endif %}
    </div>
  </div>

</section>





{% schema %}
{
"name": "Explore Collection",
"settings": [
{
"type":"image_picker",
"id":"image_desktop",
"label":"Image Desktop"
},
{
"type":"image_picker",
"id":"image_mobile",
"label":"Image Mobile"
},
{
"type":"text",
"id":"heading",
"label":"Heading",
"default":"<span> explore the </span> to 19 Degree collection"
},
{
"type":"text",
"id":"btn",
"label":"Button name",
"default":"Shop Now"
},
{
"type":"url",
"id":"btnlink",
"label":"Button URL"
},
{
"type": "color",
"id": "btn_color",
"label": "Button Color",
"default": "#000000"
},
{
"type": "color",
"id": "btn_txt_color",
"label": "Button Text Color",
"default": "#ffffff"
}
]
}
{% endschema %}

