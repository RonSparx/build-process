
<div class="page-width"> 
  <div class="bullet-video">
    {% if section.settings.heading != blank %}
    <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="bullet-video-inner">
      {% if section.settings.poster-img != blank %}
      <img src="{{section.settings.poster-img | img_url:'master' }}" alt="{{poster-img.alt | escape }}" class="poster-image" />
      {% else %}
      <img src="https://cdn.shopify.com/s/files/1/0573/8954/7702/files/lp-Bullet-Train-Trailer-thumbnail.jpg?v=1657797159" alt="img" class="poster-image"/>
      {% endif %}

      {% if section.settings.video_embed != blank %}
      <iframe allowfullscreen src="{{ section.settings.video_embed }}{% if section.settings.autoplay == true %}?autoplay=1{% else %}?autoplay=0{% endif %}{% if section.settings.mute == true %}&mute=1{% else %}&mute=0{% endif %}">
      </iframe>
      {% else %}
      <iframe allowfullscreen src="https://www.youtube.com/embed/0IOsk2Vlc4o{% if section.settings.autoplay == true %}?autoplay=1{% else %}?autoplay=0{% endif %}{% if section.settings.mute == true %}&mute=1{% else %}&mute=0{% endif %}">
      </iframe>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
"name": "Bullet Landing Video",
"settings": [
{
"type": "text",
"id": "heading",
"label": "Heading",
"default": "watch the trailer"
},
{
"type": "image_picker",
"id": "poster-img",
"label": "Poster Image"
},
{
"type": "url",
"id": "video_embed",
"label": "Video Url",
"info": "Demo URL: https://www.youtube.com/embed/0IOsk2Vlc4o"
},
{
"type": "checkbox",
"id": "autoplay",
"label": "AutoPlay",
"default": true
},
{
"type": "checkbox",
"id": "mute",
"label": "Mute Video",
"default": true
}
]
}
{% endschema %}
