{% schema %}
  {
    "name": "Alpha One",
    "settings": [
	{
	  "type":"header",
	  "content":"Youtube section"
},
{
	"type":"html",
	"id":"video",
	"label":"Video link",
	"info":"Youtube Embed video URL"
},
{
	"type":"text",
	"id":"heading",
	"label":"Heading",
	"default":"The Navigation Backpack"
},
{
	"type":"text",
	"id":"sub_heading",
	"label":"Sub Heading",
	"default":"Featuring Lando Norris"
},
{
	"type":"text",
	"id":"sub_title",
	"label":"Sub Title",
	"default":"Mclaren F1 Driver, Gamer"
},
{
	"type":"richtext",
	"id":"content",
	"label":"Content",
	"default":"<p>As an all-or-nothing kind of guy, the multi-purpose design and durability of the Navigation Backpack supports Lando's endless pursuit of making history.</p>"
},
{
	"type":"text",
	"id":"btn",
	"label":"Button name",
	"default":"Shop the Backpack"
},
{
	"type":"url",
	"id":"link",
	"label":"Button URL"
},
{
	  "type":"header",
	  "content":"Collection section"
},
{
	"type":"text",
	"id":"collection_name",
	"label":"Collection Name",
	"default":"Explore the Collection"
},
{
	"type":"collection",
	"id":"product_col",
	"label":"Collection Name"
}
	], 
"blocks":[
	{
	"name":"block",
	"type":"column",
	"settings":[

  {
  "type":"image_picker",
  "id":"img",
  "label":"Select Image"
  },
  {
  "type":"text",
  "id":"heading",
  "label":"Heading"
  },
  {
  "type":"text",
  "id":"btn",
  "label":"Button name"
  },
  {
  "type":"url",
  "id":"link",
  "label":"Categories URL"
  }
]
}
]
  }
{% endschema %}

