          <h2>{{section.settings.heading}}</h2>
          <h3>{{section.settings.sub_heading}}</h3>
          <span class="subtitle">{{section.settings.sub_title}}</span> 
            {{section.settings.content}} 
{% if section.settings.btn != blank %}
