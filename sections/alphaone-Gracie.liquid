      <div class="backpack-wrap">
        <div class="backpack-video">
          <div class="video-container">
           {% if section.settings.video != blank %}
              <iframe width="100%"  src="https://www.youtube.com/embed/{{section.settings.video}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            {% else %}
