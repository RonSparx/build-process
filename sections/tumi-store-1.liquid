<script>
  $(window).scroll(function(){
    if ($(window).scrollTop() >= 300) {
      $('.banner-nav').addClass('fixed-header');
    }
    else {
      $('.banner-nav').removeClass('fixed-header');
    }
  });
</script>


{% schema %}
{
"name": "tumi-store-1",
"settings": [
{
"type": "image_picker",
"id": "desk_img",
"label": "Desktop Image"
},
{
"type": "image_picker",
"id": "mbl_img",
"label": "Mobile Image"
},
{
"type": "text",
"id": "heading",
"label": "Heading"
},
{
"type": "text",
"id": "btnlabel",
"label": "button Label"
},
{
"type": "url",
"id": "btnlink",
"label": "button Link"
},
{
"type": "text",
"id": "store",
"label": "Enter the store lable"
},
{
"type": "url",
"id": "store-link",
"label": "Store Url"
}
],
"blocks": [
{
"type": "Navigation",
"name": "Nav text",
"settings": [
{
"type": "text",
"id": "navtex",
"label": "Nav text"
},
{
"type":"url",
"id":"link",
"label":"Link"
}
]
}      
]
}
{% endschema %}