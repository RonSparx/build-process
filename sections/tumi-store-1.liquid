<section class="slider_con common-vms banner-section" data-aos="fade-up">
  <div class="custom-container" id="slider-landing">

    {% comment %}
    <div class="banner-wraper">
      <picture>
        <source class="ful-width" media="(min-width:750px)" srcset="{{ section.settings.desk_img | img_url: "original"}}">
        <img src="{{ section.settings.mbl_img | img_url: "original"}}" alt="icon" style="width:auto;">
      </picture>


      <div class="explore-section">
        <div class="explore-inner-section" data-aos="fade-up" data-aos-delay="300">
          <h2>{{ section.settings.heading }}</h2>
          <div class="banner-buton">
            <a class="btn-ab" target="_blank" href="{{ section.settings.store-link }}">{{ section.settings.store}}</a>
          </div>
          <div class="gif-icon">
            <picture>
              <source media="(min-width:750px)" srcset="{{"Desktop-Icon.gif" | asset_img_url: "original"}}">
              <img src="{{"Mobile-Icon.gif" | asset_img_url: "original"}}" alt="icon" style="width:auto;">
            </picture>
          </div>
        </div>
      </div>
    </div>
    {% endcomment %}

    <div class="banner-wraper">
      <picture>
        <source class="ful-width" media="(min-width:750px)" srcset="{{ section.settings.desk_img | img_url: "original"}}">
        <img src="{{ section.settings.mbl_img | img_url: "original"}}" alt="icon" style="width:auto;">
      </picture>
      <div class="explore-section">
        <div class="explore-inner-section" data-aos="fade-up" data-aos-delay="300">
          <h2>{{ section.settings.heading }}</h2>
          <div class="banner-buton">
            <a class="btn-ab" target="_blank" href="{{ section.settings.store-link }}">{{ section.settings.store}}</a>
          </div>
          <div class="gif-icon">
            <picture>
              <source media="(min-width:750px)" srcset="{{"Desktop-Icon.gif" | asset_img_url: "original"}}">
              <img src="{{"Mobile-Icon.gif" | asset_img_url: "original"}}" alt="icon" style="width:auto;">
            </picture>
          </div>
        </div>
      </div>

    </div>

  </div>


