<section class="common-vms browser-section" data-aos="fade-up">
  <div class="custom-container">
    <ul>
      <li>
        <div class="mobil-content"  data-aos="fade-up" data-aos-delay="200">
          <h2>{{ section.settings.heading }}</h2>
          <p>{{ section.settings.text }}</p>
          <a class="btn-ab" href="{{ section.settings.btnlink }}">{{ section.settings.btnlabel }}</a>
        </div>  	
      </li>
      <li>
        <div class="mobil-wrapper" data-aos="fade-up" data-aos-delay="100">
          <picture>
            <source class="ful-width" media="(min-width:750px)" srcset="{{ section.settings.desk_img | img_url: "original"}}">
            <img src="{{ section.settings.mbl_img | img_url: "original"}}" alt="icon" style="width:auto;">
          </picture>
          
          {% comment %}
          <div class="slide-gif">
            <img src="https://cdn.shopify.com/s/files/1/0272/4233/2203/files/3d_gif.gif?v=1611551228" alt="gif-rotate" style="width:auto;">
          </div>
          {% endcomment %}
        </div>
      </li>

    </ul>
  </div>
</section>
{% schema %}
{
"name": "tumi-store-3",
"settings": [
{
"type": "image_picker",
"id": "desk_img",
"label": "Desktop Image"
},
{
"type": "image_picker",
"id": "mbl_img",
"label": "Mobile Image"
},
{
"type": "text",
"id": "heading",
"label": "Heading"
},
{
"type": "textarea",
"id": "text",
"label": "text"
},
{
"type": "text",
"id": "btnlabel",
"label": "button Label"
},
{
"type": "url",
"id": "btnlink",
"label": "button Link"
}
]
}
{% endschema %}